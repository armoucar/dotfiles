{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "LS",
      "Glob",
      "Grep",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(uv:*)",
      "Bash(pip:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(ln:*)",
      "Bash(docker build:*)",
      "Bash(docker run:*)",
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "Bash(podman build:*)",
      "Bash(podman run:*)",
      "Bash(podman exec:*)",
      "Bash(podman logs:*)",
      "Bash(kubectl config current-context*)",
      "Bash(kubectl config get-clusters*)",
      "Bash(kubectl config get-contexts*)",
      "Bash(kubectl config get-users*)",
      "Bash(kubectl config view*)",
      "Bash(command tmux:*)",
      "Bash(tmux:*)",
      "Bash(aerospace:*)",
      "Bash(ack:*)",
      "Bash(docker stats:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh workflow:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(launchctl:*)",
      "WebSearch",
      "WebFetch",
      "mcp__context7__resolve-library-id(*)",
      "mcp__context7__get-library-docs(*)",
      "mcp__ide__getDiagnostics"
    ],
    "ask": [
      "Bash(rm -rf*)",
      "Bash(sudo:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(podman rm:*)",
      "Bash(podman rmi:*)",
      "Bash(kubectl delete:*)",
      "Bash(terraform destroy:*)"
    ]
  },
  "env": {
    "CLAUDE_PROJECT_TYPE": "development"
  }
}
