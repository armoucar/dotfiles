{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Read(**.md)",
      "Read(**.txt)",
      "Read(**.json)",
      "Read(**.yaml)",
      "Read(**.yml)", 
      "LS",
      "Glob",
      "Grep",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(ls *)",
      "Bash(pwd *)",
      "WebSearch"
    ],
    "ask": [
      "Edit",
      "MultiEdit", 
      "Write",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(docker *)",
      "Bash(podman *)",
      "Bash(kubectl *)"
    ],
    "deny": [
      "Read(./.env*)",
      "Read(./secrets/**)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(**/.ssh/**)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(curl *secret*)",
      "Bash(curl *token*)",
      "Bash(curl *key*)"
    ]
  }
}