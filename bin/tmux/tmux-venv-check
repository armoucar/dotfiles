#!/bin/bash
# Python virtual environment detection script for tmux status bar
# Returns formatted venv indicator only in Python project directories

# Check if we're in a Python project directory
# Look for common Python project files
if ! ([ -f "pyproject.toml" ] || [ -f "requirements.txt" ] || [ -f "setup.py" ] || [ -f "Pipfile" ] || [ -f "poetry.lock" ] || [ -f ".python-version" ] || ls *.py >/dev/null 2>&1); then
    exit 0
fi

