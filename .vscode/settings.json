{
  // Project-specific settings for dotfiles repository

  // Hide Claude auto-generated directories from explorer
  "files.exclude": {
    "config/claude/ide": true,
    "config/claude/projects": true,
    "config/claude/shell-snapshots": true,
    "config/claude/statsig": true,
    "config/claude/todos": true
  },

  // Exclude docs-external submodules from search
  "search.exclude": {
    "docs-external/": true
  },

  // Fix Alt+arrow keys for word navigation in terminal
  "terminal.integrated.sendKeybindingsToShell": false,
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.terminal.sendSequence"
  ]
}
